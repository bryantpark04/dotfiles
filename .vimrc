set nocompatible
filetype indent plugin on
set hidden
set wildmenu
set nostartofline
set showcmd
" set visualbell
set belloff=all

set guifont=Consolas:h12:cANSI:qDRAFT
syntax on
" set tabstop=4
set shiftwidth=4
set autoindent
set softtabstop=4
set expandtab
" ret!
set backspace=indent,eol,start
noremap ; l
noremap l k
noremap k j
noremap j h
set smarttab
set smartindent
set autoread
set nobackup
set nowb
set noswapfile
set number " relativenumber

set ignorecase
set smartcase

set nostartofline
" set ruler
" set laststatus=2
set confirm
